{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true, // Enable experimental decorators
    "emitDecoratorMetadata": true  // Enable metadata for decorators
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}